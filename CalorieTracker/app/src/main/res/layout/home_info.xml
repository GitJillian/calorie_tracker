<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/home_info">
    <TextView android:id="@+id/home_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_gender"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_age"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_height"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_weight"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_frequency"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_bmi"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <TextView android:id="@+id/home_bmr"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="20sp"
              android:text="MyText"
              android:singleLine="true"
              android:inputType="text"
              android:focusable="true"
              android:clickable="true"
              android:cursorVisible="true"
              android:layout_gravity="left"
              android:layout_marginBottom="10dp"
              android:layout_marginLeft="15dp"
    />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="vertical">
        <Button
                android:id="@+id/edit_profile"
                android:text="Edit Profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
        />
        <Button
                android:id="@+id/btn_logout"
                android:text="Log Out"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
        />
    </LinearLayout>

</LinearLayout>
