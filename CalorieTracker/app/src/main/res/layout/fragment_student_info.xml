<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:background="@color/linen"
        android:gravity="end|center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#323131"

            android:textSize="20dp"
            android:textStyle="bold|italic" />

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"
        android:singleLine="true"
        android:text="name"
        android:textSize="35sp"
        android:textStyle="bold" />

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/image_gender"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"
        app:siBorderColor="@color/linen"
        app:siBorderWidth="1dp" />
</LinearLayout>

    <TextView
        android:id="@+id/student_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"
        android:singleLine="true"
        android:text="Age"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/dash_line"
        android:layerType="software"/>

    <TextView
        android:id="@+id/student_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"
        android:singleLine="true"
        android:text="height"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/dash_line"
        android:layerType="software"/>

    <TextView
        android:id="@+id/student_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"
        android:singleLine="true"
        android:text="weight"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/dash_line"
        android:layerType="software"/>

    <TextView
        android:id="@+id/student_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text"
        android:singleLine="true"
        android:text="frequency"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/dash_line"
        android:layerType="software"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/clear_today_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Clear Today's Record" />

        <Button
            android:id="@+id/clear_all_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All Record" />
    </LinearLayout>
</LinearLayout>