<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/self_ui"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_back"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="Self-Selected Mode"
        android:textSize="20dp" />


    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/image_view"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="40dp"
        app:siBorderColor="@color/linen"
        app:siBorderWidth="5dp" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:focusable="true"
        android:gravity="center|center_horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="50dp"
        android:singleLine="true"
        android:text="Build Your Own Meal"
        android:textColor="@color/tomato"
        android:textSize="30sp"
        tools:textStyle="italic|bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/my_custom_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/self_breakfast"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/self_breakfast">

        </ImageView>

        <TextView
            android:id="@+id/self_breakfast_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Add Breakfast"
            android:textSize="18sp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/button_breakfast"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add_self_reverse" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/my_custom_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/self_lunch"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/self_lunch">

        </ImageView>

        <TextView
            android:id="@+id/self_lunch_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Add Lunch"
            android:textSize="18sp"

            />

        <View
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight=".1" />


        <ImageView
            android:id="@+id/button_lunch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add_self_reverse" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/my_custom_background"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/self_dinner"
            android:layout_width="58dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/self_dinner">

        </ImageView>

        <TextView
            android:id="@+id/self_dinner_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="true"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="Add Dinner"
            android:textSize="18sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/button_dinner"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_add_self_reverse" />
    </LinearLayout>


</LinearLayout>
