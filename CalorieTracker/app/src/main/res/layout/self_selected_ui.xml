<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_info"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home_back"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:text="Self-Selected Mode"
        android:textColor="#E5F8F8F7"
        android:textSize="20dp"
        android:textStyle="bold" />


    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="40dp"
        app:siBorderColor="@color/linen"
        app:siBorderWidth="5dp"/>


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center|center_horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="45dp"
        android:singleLine="true"
        android:text="Build Your Own Meal"
        android:textColor="@color/tomato"
        android:textSize="25sp"
        tools:textStyle="italic|bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_button_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_breakfast_2">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="Breakfast"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/home_bmr_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"

                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="bmr breakfast"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/eaten_breakfast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="breakfast eaten"
                android:textSize="13sp"

                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight=".1" />


        <ImageView
            android:id="@+id/button_breakfast"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_button_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_lunch">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="Lunch"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/home_bmr_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"

                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="bmr lunch"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/eaten_lunch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:cursorVisible="true"
                android:focusable="true"

                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="lunch eaten"
                android:textSize="13sp"

                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight=".1" />


        <ImageView
            android:id="@+id/button_lunch"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/custom_button_border"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/icon_dinner">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="Dinner"
                android:textSize="18sp"

                />

            <TextView
                android:id="@+id/home_bmr_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="bmr dinner"
                android:textSize="13sp"

                />

            <TextView
                android:id="@+id/eaten_dinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="dinner eaten"
                android:textSize="13sp"

                />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="7dp"
            android:layout_weight=".1" />


        <ImageView
            android:id="@+id/button_dinner"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_add" />
    </LinearLayout>


</LinearLayout>
